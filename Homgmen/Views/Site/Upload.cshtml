@{
    Layout = "~/Views/Shared/_Side.cshtml";
}
@section SideMenu
{
    @Html.Partial("_SiteSideMenu");
}
<div class="panel panel-primary" style="margin-top:15px;">
    <div class="panel-heading text-center">
        <h1 class="panel-title">向大红门集团上报运单数据</h1>
    </div>
    <div class="panel-body">
        <p>向大红门集团提交 @DateTime.Now.Date.ToShortDateString() 的业务数据（含今日发货运单，今日到货运单，今日付款结算的运单，今日发放代收货款的运单）。</p>
        <ul class="list-group">
            <li class="list-group-item"><strong>@DateTime.Now.Date.ToShortDateString()</strong>今日全部的收货运单数据为<strong>@ViewBag.TotalDataCount</strong>条</li>
            <!--li class="list-group-item"><strong>@DateTime.Now.Date.ToShortDateString()</strong>今日应提交的收货运单数据为<strong id="tijiao"></strong>条</li-->
            <li class="list-group-item"><strong>@DateTime.Now.Date.ToShortDateString()</strong>今日应提交<strong>@DateTime.Now.Date.AddDays(-1).ToShortDateString()</strong>的到货运单数据为<strong>@ViewBag.DHDataCount</strong>条</li>
            <li class="list-group-item"><strong>@DateTime.Now.Date.ToShortDateString()</strong>今日应提交的代收放款运单数据为<strong id="fd">@ViewBag.DSCount</strong>条</li>
            <li class="list-group-item">
                <p><strong>当前操作状态：</strong><span id="zhuangtai"></span></p>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em;">
                        0%
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="text-right">
                    <!--
                    @Ajax.ActionLink("数据提交准备", "GetData", new { id = DateTime.Now.Date.ToShortDateString() }, new AjaxOptions() { UpdateTargetId = "tijiao", OnBegin = "loaddata", OnSuccess = "loaddataok" }, new {@class="btn btn-primary active", role="button", id = "getdata" })
                    <span class="glyphicon glyphicon-arrow-right"></span>
                    -->
                    <a href="#" class="btn btn-primary" id="tj">数据提交</a>
                </div>
            </li>
        </ul>
    </div>
    <div class="panel-footer text-right">当前系统日期为：@DateTime.Now.Date.ToShortDateString()</div>
</div>
@section scripts
{
    <script type="text/javascript">
        $('#SideMenu_Upload').addClass('active');
    </script>
}


