@model IEnumerable<Homgmen.Models.Idde>

@{
    ViewBag.Title = "iPad终端列表";
    Layout = "~/Views/Shared/_Side.cshtml";
}

@section SideMenu
{
    @Html.Partial("../Shared/_SettingSideMenu");
}

<h2>iPad终端列表<small style="font-size:14px; padding-left:2rem;">@Html.ActionLink("创建新的iPad终端", "Create")</small></h2>

<table class="table table-bordered table-responsive table-hover table-striped">
    <thead>
        <tr>
            <th class ="text-center">序号</th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.设备号)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.业务员)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.收货网点)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.始发城市)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.责任人)
            </th>
            <th class="text-center">操作区域</th>
        </tr>
    </thead>
    @{
        int xh = 0;
        foreach (var item in Model)
        {
            xh++;
            <tr>
                <td class="text-right">@xh.ToString().Trim()</td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.设备号)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.业务员)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.收货网点)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.始发城市)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.责任人)
                </td>
                <td class="text-right">
                    @Html.ActionLink("修改", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("详细信息", "Details", new { id = item.ID }) |
                    @Html.ActionLink("删除", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    }
</table>

@section scripts
{
    <script type="text/javascript">
        $('#SettingSideMenu_iPad').addClass('active');
    </script>
}
